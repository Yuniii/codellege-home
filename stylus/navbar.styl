.navbar
	background main-color
	height navbar-height
	padding 0 26px
	li > a
		color #FFF
		font-family inherit
		font-size 20px
		padding 0 28px
		height navbar-height
		line-height navbar-height
		&:hover, &:focus, &:active
			background blackA(0.06)
			color @color
		@media screen and (max-width: break2)
			font-size 18px
	li.uk-active > a, li.uk-open > a
		color #FFF
		background blackA(0.1)
	.burger
		display none
		@media screen and (max-width: break2)
			display block

.nav-dropdown
	background #FFF
	box-shadow 1px 1px 1px 0 rgba(0,0,0,.14),0 2px 1px -2px rgba(0,0,0,.16),1px 1px 3px 0 rgba(0,0,0,.12)
	li > a, li.uk-active > a
		color main-black
		height 54px
		line-height 54px
		&:hover, &:focus, &:active
			color @color

.mobile-nav-container
	display none
	@media screen and (max-width: break4)
		display block

.normal-nav-container
	@media screen and (max-width: break4)
		display none
